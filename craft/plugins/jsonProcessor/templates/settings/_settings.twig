{% import "_includes/forms" as forms %}

{% block main %}
<section>
    <header class="section-header">
        <div id="page-title"><h1>Json Processor Settings</h1></div>
    </header>


    {% import "_includes/forms" as forms %}
    <div class="pane">
        <form id="jsonprocessor-settings" method="post" accept-charset="UTF-8">
            <input type="hidden" name="action" value="jsonProcessor/savePluginSettings">
            {{ getCsrfInput() }}
            {{ forms.textField({
            id: 'jsonFeedUrl',
            name: 'jsonFeedUrl',
            label: 'Inital JSON Feed Url'|t,
            value: settings.jsonFeedUrl,
            first: true,
            autofocus: true,
            instructions: 'The inital url to follow, changing this will delete all data.'|t
            }) }}

            <div class="buttons">
                <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
            </div>
        </form>
    </div>

</section>

{% endblock %}

